<VirtualHost <%= @listen_addr_port %>>
  ServerName <%= @servername %>
<% if @serveradmin -%>
  ServerAdmin <%= @serveradmin %>
<% end -%>

  ## Vhost docroot
<% if @virtual_docroot -%>
  VirtualDocumentRoot "<%= @virtual_docroot %>"
<% else -%>
  DocumentRoot "<%= @docroot %>"
<% end -%>

</VirtualHost>
